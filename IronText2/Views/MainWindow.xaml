<Window x:Class="IronText2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <DockPanel LastChildFill="True" VerticalAlignment="Stretch" >
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="Menu"></ContentControl>
        <ItemsControl DockPanel.Dock="Left" prism:RegionManager.RegionName="Navigation" Width="200px" MaxWidth="200px" VerticalContentAlignment="Stretch"></ItemsControl>
        <ContentControl prism:RegionManager.RegionName="Main" Background="#FF1E53E1" BorderBrush="#FFCB1D1D" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
    </DockPanel>

</Window>
